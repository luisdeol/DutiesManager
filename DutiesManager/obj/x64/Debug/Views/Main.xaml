<Page
    x:Class="DutiesManager.Views.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DutiesManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='1' Name="Sv" DisplayMode="CompactOverlay" CompactPaneLength="50" OpenPaneLength="200">
            <SplitView.Pane>
                <StackPanel Background="LightGray">
                    <Button x:ConnectionId='2' Name="BHamburger" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"                           ></Button>
                    <ListView>
                        <ListViewItem Content="&#xE80F;" FontFamily="Segoe MDL2 Assets"></ListViewItem>
                        <ListViewItem Content="&#xE713;" FontFamily="Segoe MDL2 Assets" ></ListViewItem>
                    </ListView>
                </StackPanel>    
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel x:ConnectionId='3' Name="SvContent" Margin="10 0 0 0"                            >
                    <TextBlock x:ConnectionId='4' Name="Title" Text="Main page" HorizontalAlignment="Center" Margin="0 30 0 0"></TextBlock>
                    <TextBlock x:ConnectionId='5' Name="FilterTitle" Text="Filter"></TextBlock>
                    <ComboBox>
                        <ComboBoxItem Content="1 week" IsSelected="True"></ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:ConnectionId='6' Name="TbTitle" Text="Duties"></TextBlock>
                    <ScrollViewer VerticalScrollBarVisibility="Visible">
                        <ListBox x:ConnectionId='7' Name="LbDuties" HorizontalAlignment="Stretch"                                             >
                        </ListBox>    
                    </ScrollViewer>
                </StackPanel>    
            </SplitView.Content>
        </SplitView>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='8' Icon="Add" Label="Create" ClickMode="Press"                    />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

