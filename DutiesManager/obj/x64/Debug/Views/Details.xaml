<Page
    x:Class="DutiesManager.Views.Details"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DutiesManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='1' Name="Sv" DisplayMode="CompactOverlay" CompactPaneLength="50" OpenPaneLength="200">
            <SplitView.Pane>
                <StackPanel Background="LightGray">
                    <Button x:ConnectionId='2' Name="BHamburger" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"                           ></Button>
                    <ListView x:ConnectionId='3' Name="LbMenu"                                                >
                        <ListViewItem x:ConnectionId='4' Name="Home" Content="&#xE80F;" FontFamily="Segoe MDL2 Assets"></ListViewItem>
                        <ListViewItem x:ConnectionId='5' Name="Settings" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" ></ListViewItem>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel x:ConnectionId='6' Name="SvContent" Margin="10 0 0 0" Padding="10 50 10 10">
                    <TextBlock x:ConnectionId='7' Name="Title" FontSize="20px"> Title </TextBlock>
                    <TextBlock x:ConnectionId='8' Name="TitleValue"></TextBlock>
                    <TextBlock x:ConnectionId='9' Name="Description" FontSize="20px" Margin="0 10 0 0"> Description </TextBlock>
                    <TextBlock x:ConnectionId='10' Name="DescriptionValue"></TextBlock>
                    <TextBlock x:ConnectionId='11' Name="DueDate" FontSize="20px" Margin="0 10 0 0"> DueDate </TextBlock>
                    <TextBlock x:ConnectionId='12' Name="DueDateValue"></TextBlock>
                    <TextBlock x:ConnectionId='13' Name="DueTime" FontSize="20px" Margin="0 10 0 0"> DueTime </TextBlock>
                    <TextBlock x:ConnectionId='14' Name="DueTimeValue"></TextBlock>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

